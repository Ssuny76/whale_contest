{
    "name": "Get pages source",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Get pages source from a popup",
    "browser_action": {
      "default_icon": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "web_accessible_resources": [
        "loading.png"
    ],
    "permissions": ["tabs", "<all_urls>", "activeTab"]
  }